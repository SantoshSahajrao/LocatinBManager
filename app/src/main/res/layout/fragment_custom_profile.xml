<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bitcode.hardik.profilemanager.Fragments.FragmentCustomProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCustomProfileName"
                    android:text="Profile Name"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtTxtProfileName"
                    android:padding="8dp"
                    android:hint="Enter Profile Name"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#D3D3D3" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtViewMediaVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media Volume"
                    android:textSize="20sp"
                    android:padding="16sp"
                    android:textColor="#000000"/>

                <SeekBar
                    android:id="@+id/seekBarMediaVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"/>

                <TextView
                    android:id="@+id/txtViewAlarmVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Alarm Volume"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <SeekBar
                    android:id="@+id/seekBarAlarmVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"/>

                <TextView
                    android:id="@+id/txtNotificationVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Notification"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <SeekBar
                    android:id="@+id/seeBarNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"/>

                <TextView
                    android:id="@+id/txtViewRingVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Ring Volume"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <SeekBar
                    android:id="@+id/seeBarRingVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp" />

                <TextView
                    android:id="@+id/txtViewMessageVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:text="Message Volume"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <SeekBar
                    android:id="@+id/seeBarMessageVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#D3D3D3" />

                <TextView
                    android:id="@+id/txtViewPhoneRingtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Phone Ringtone"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/txtViewNotificationRingtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Notification Ringtone"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/txtViewMessageRingtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Message Ringtone"
                    android:textSize="20sp"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/txtViewWallpaper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Wallpaper"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtViewVibrateOnCalls"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Vibrate on Calls"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight=".5"/>

                <Switch
                    android:id="@+id/switchVibrateForCalls"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewWifi"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="WiFi"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight=".5"/>


                <Switch
                    android:id="@+id/switchWifi"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewBluetooth"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="Bluetooth"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight=".5"
                    />

                <Switch
                    android:id="@+id/switchBluetooth"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
